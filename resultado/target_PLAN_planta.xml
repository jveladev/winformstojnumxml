<?xml version="1.0" encoding="UTF-8"?>
<entidad xmlns="http://jnum.com/entidad"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jnum.com/entidad
	../../esquemas/entidad.xsd">
  <modulo>territorio</modulo>
  <nombre>planta</nombre>
  <nombreTabla>PLANTA</nombreTabla>
  <label>Planta</label>
  <menuLabel>Plantas</menuLabel>
  <nombreID>id_planta</nombreID>
  <comboLabel>{descripcion}</comboLabel>
  <orden>
    <atributo>descripcion</atributo>
  </orden>
  <opciones>
  </opciones>
  <favorito>
  </favorito>
  <embeddedId>
    <atributo>idEntidad</atributo>
    <atributo>idPlanta</atributo>
  </embeddedId>
  <atributos>
    <atributo>
      <nombre>idEntidad</nombre>
      <transient>true</transient>
      <obligatorio>true</obligatorio>
      <clase>java.lang.Integer</clase>
    </atributo>

    <atributo>
      <nombre>idPlanta</nombre>
      <transient>true</transient>
      <obligatorio>true</obligatorio>
      <clase>java.lang.Integer</clase>
      <secciones>
        <busqueda>
          <operador>eq</operador>
        </busqueda>
      </secciones>
    </atributo>
    
    <atributo>
      <nombre>codigo</nombre>
      <nombreColumna>codigo</nombreColumna>
      <longitud>4</longitud>
      <obligatorio>true</obligatorio>
      <label>Código</label>
      <clase>java.lang.String</clase>
      <unico>true</unico>
      <events>
        <change>codigoChange()</change>
      </events>
      <edicion>
        <tipo>text</tipo>
        <longitud>4</longitud>
        <validaciones>
          <validacion>
            <nombre>maxlength</nombre>
            <valor>4</valor>
          </validacion>
          <validacion>
            <nombre>required</nombre>
          </validacion>
        </validaciones>
      </edicion>
      <secciones>
        <busqueda>
          <operador>eq</operador>
        </busqueda>
        <listado>true</listado>
        <insercion>true</insercion>
        <modificacion>true</modificacion>
      </secciones>
    </atributo>
    
    <atributo>
      <nombre>descripcion</nombre>
      <nombreColumna>descripcion</nombreColumna>
      <longitud>100</longitud>
      <obligatorio>true</obligatorio>
      <label>Descripción</label>
      <clase>java.lang.String</clase>
      <edicion>
        <tipo>text</tipo>
        <longitud>100</longitud>
        <validaciones>
          <validacion>
            <nombre>required</nombre>
          </validacion>
          <validacion>
            <nombre>maxlength</nombre>
            <valor>100</valor>
          </validacion>
        </validaciones>
      </edicion>
      <secciones>
        <busqueda>
          <operador>eq</operador>
        </busqueda>
        <listado>true</listado>
        <insercion>true</insercion>
        <modificacion>true</modificacion>
      </secciones>
    </atributo>
    
    <atributo>
      <nombre>activo</nombre>
      <nombreColumna>activo</nombreColumna>
      <obligatorio>false</obligatorio>
      <label>Activo</label>
      <clase>java.lang.Boolean</clase>
      <edicion>
        <tipo>checkbox</tipo>
      </edicion>
      <secciones>
        <busqueda>
          <operador>eq</operador>
        </busqueda>
        <listado>true</listado>
        <insercion>true</insercion>
        <modificacion>true</modificacion>
      </secciones>
    </atributo>
  </atributos>
  
  <visual>
    <busqueda>
      <vista>
        <definicion>void.descripcioneq(width=7)</definicion>
      </vista>
    </busqueda>
    <adicion>
      <agregable>true</agregable>
      <vista>
        <definicion>this.codigo(width=4); this.descripcion(width=7); this.activo(width=2)</definicion>
     </vista>
    </adicion>
    <edicion>
      <editable>true</editable>
      <vista>
        <definicion>this.codigo(width=4); this.descripcion(width=7); this.activo(width=2)</definicion>
      </vista>
    </edicion>
    <listado>
      <deletable>true</deletable>
      <vista>
        <definicion>codigo, descripcion, activo</definicion>
      </vista>
    </listado>
    <propselect>
      <vista>
        <definicion>void.codigoeq, void.descripcioneq, void.activoeq</definicion>
      </vista>
    </propselect>
  </visual>
</entidad> 